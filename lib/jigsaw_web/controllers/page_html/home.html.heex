<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jigsaw Puzzle</title>
</head>

<body>
    <div class="container">
        <h1>Jigsaw Puzzle</h1>
        <div class="puzzle-area">
            <div class="pieces-container" id="left-pieces">
                <!-- Puzzle pieces will be added dynamically here -->
            <div class="pieces-container">
                <img src="images/puzzle-pieces/piece_0_0.png" id="piece_0_0" draggable="true">
                <img src="images/puzzle-pieces/piece_0_1.png" id="piece_0_1" draggable="true">
                <img src="images/puzzle-pieces/piece_0_2.png" id="piece_0_2" draggable="true">
                <img src="images/puzzle-pieces/piece_1_0.png" id="piece_1_0" draggable="true">
                <img src="images/puzzle-pieces/piece_1_1.png" id="piece_1_1" draggable="true">
                <img src="images/puzzle-pieces/piece_1_2.png" id="piece_1_2" draggable="true">
                <img src="images/puzzle-pieces/piece_2_0.png" id="piece_2_0" draggable="true">
                <img src="images/puzzle-pieces/piece_2_1.png" id="piece_2_1" draggable="true">
                <img src="images/puzzle-pieces/piece_2_2.png" id="piece_2_2" draggable="true">
                <!-- Puzzle pieces -->
            </div>

            <div class="puzzle-box">
                <img src="images/original/jigsaw-img-1.jpeg" alt="Jigsaw Puzzle Image">
                <img src="images/original/newimg.png" alt="Jigsaw Puzzle Image">
                <div class="grid-line">
                    <!-- Vertical Lines -->
                    <div class="grid-cell" data-index="0_0"></div>
                    <div class="grid-cell" data-index="0_1"></div>
                    <div class="grid-cell" data-index="0_2"></div>
                    <div class="grid-cell" data-index="1_0"></div>
                    <div class="grid-cell" data-index="1_1"></div>
                    <div class="grid-cell" data-index="1_2"></div>
                    <div class="grid-cell" data-index="2_0"></div>
                    <div class="grid-cell" data-index="2_1"></div>
                    <div class="grid-cell" data-index="2_2"></div>
                </div>
            </div>

            <div class="pieces-container" id="right-pieces">
                <!-- Puzzle pieces will be added dynamically here -->
            </div>
        </div>
  </div>

    <script src={Phoenix.VerifiedRoutes.static_path(@conn, "/js/app.js")}></script>
</body>
</html>